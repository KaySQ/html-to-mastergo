{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "types": [
      "@mastergo/plugin-typings",
      "@types/node",
    ]
  },
  "include": [
    "src/**/*.{{,d.}ts,tsx,vue}",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
